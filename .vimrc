set nocompatible
filetype on
syntax on
filetype plugin indent on
set number
set noerrorbells
set encoding=utf-8
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set completeopt=menuone,noinsert,noselect
set mouse=a
set wrap
set formatoptions=tcqrn1
set noshiftround
set autoindent
set smartindent
set scrolloff=3
set backspace=indent,eol,start
set ttyfast
set laststatus=2
set splitbelow splitright
set t_Co=256
set background=dark
set viminfo=

